<%= form_with(model: property_list, local: true) do |form| %>
  <% if property_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property_list.errors.count, "error") %> prohibited this property_list from being saved:</h2>

      <ul>
      <% property_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.label :Property %>
    <%= form.text_field :property %>
  </div>

  <div class="field">
    <%= form.label :Rent %>
    <%= form.text_field :rent %>RWF
  </div>

  <div class="field">
    <%= form.label :age, "Buiding age" %> 
    <%= form.number_field :age %>year/years old
  </div>

  <div class="field">
    <%= form.label :Address %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :Remark %>
    <%= form.text_area :remark %>
  </div>
        <hr>
  <%= form.fields_for :properties do |properties_form| %>
    <h2>Name of railway line<%=properties_form.index + 1%> </h2>
    <div class="field">
      <%= properties_form.label :name, "Name of railway line" %>
      <%= properties_form.text_field :line %>
    </div>

    <div class="field">
      <%= properties_form.label :station, "Station name" %>
      <%= properties_form.text_field :station_name %>
    </div>

    <div class="field">
      <%= properties_form.label :minute, "How many minutes walk" %>
      <%= properties_form.number_field :minute %>min/mins
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
      <% end %>
<% end %>
